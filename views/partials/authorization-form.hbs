<form class="form-signap" method="post" action="/admin/authorization">
    <h2>
        Авторизация
    </h2>
    <div class="form-group">
        <input type="text" id="login" class="form-control" name="login" placeholder="введите логин" autocomplete="login"
            minlength="3" maxlength="20" value="login">
    </div>
    <div class="form-group">
        <input type="password" id="passwordInput" name="password" class="form-control password-input"
            placeholder="пароль" autocomplete="new-password" value="password" minlength="8" maxlength="20" required>
    </div>
    <input type="submit" name="submit" class="btn btn-outline-primary form-control" value="войти">
    <div class="error-message" style="display: none;"></div>
</form>